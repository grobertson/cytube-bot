[Unit]
Description=CyTube Bot Web Status Server
After=network.target cytube-bot.service
Requires=cytube-bot.service

[Service]
Type=simple
User=botuser
WorkingDirectory=/home/botuser/cytube-bot
ExecStart=/usr/bin/python3 web/status_server.py --host 0.0.0.0 --port 5000
Restart=on-failure
RestartSec=10
StandardOutput=append:/var/log/cytube-bot/web.log
StandardError=append:/var/log/cytube-bot/web.log

[Install]
WantedBy=multi-user.target
