{
  "domain": "https://cytu.be",
  "channel": "YourChannelName",
  "user": ["YourUsername", "YourPassword"],
  "response_timeout": 1,
  "restart_delay": 5,
  "log_level": "WARNING",
  "chat_log_file": "chat.log",
  "media_log_file": "media.log",
  "shell": "localhost:5555",
  "db": "bot_data.db",
  "llm": {
    "enabled": false,
    "provider": "ollama",
    "system_prompt_file": "prompt.md",
    "max_context_messages": 10,
    "temperature": 0.7,
    "max_tokens": 500,
    "log_only": false,
    "ollama": {
      "base_url": "http://localhost:11434",
      "model": "llama3"
    },
    "openrouter": {
      "api_key": "YOUR_OPENROUTER_API_KEY",
      "model": "anthropic/claude-3-haiku",
      "site_url": "https://your-site.com",
      "site_name": "Rosey CyTube Bot"
    },
    "triggers": {
      "enabled": true,
      "direct_mention": true,
      "commands": ["!ai", "!ask"],
      "ambient_chat": {
        "enabled": false,
        "every_n_messages": 20,
        "randomness": 0.5
      },
      "keywords": [
        {
          "phrases": ["toddy", "the toddy"],
          "probability": 0.1,
          "cooldown_seconds": 300
        },
        {
          "phrases": ["boobs", "boobies"],
          "probability": 0.05,
          "cooldown_seconds": 600
        }
      ],
      "greetings": {
        "enabled": false,
        "on_join": {
          "enabled": true,
          "probability": 0.2,
          "idle_threshold_minutes": 60,
          "moderators_only": false,
          "specific_users": {
            "alice": 1.0,
            "bob": 0.5
          }
        },
        "on_status_change": {
          "enabled": false,
          "probability": 0.1
        }
      }
    }
  }
}
